  #fi

  # fnm
  #if ! has "fnm"; then
  #  info "Installing fnm"
  #  unzip -qu "$(download "${urls[fnm]}")" -d "$DOWNLOAD_DIR"
  #  install -D -v -m 755 -t "$LOCAL_BIN_DIR" "$DOWNLOAD_DIR/fnm"
