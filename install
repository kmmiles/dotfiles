main() {
  usage() {
    printf 'Usage: %s [OPTIONS]\n\n' "$(basename "$0")"
    printf 'OPTIONS\n'
    printf ' -e\tInstall everything. Default is link only.\n'
    printf '\tAlternatively, can be set in environment with: EVERYTHING=true\n'
  }


  check_deps() {
    for dep in bash git curl unzip; do
      if ! command -v "$dep" > /dev/null 2>&1; then
        err "$dep not found"
        return 1
      fi
    done
  }

  local everything="${EVERYTHING:-false}"
  while getopts 'e' flag; do
    case "${flag}" in
      e) everything=true ;;
      *) echo "Unexpected option ${flag}"; usage; exit 1 ;;
    esac
  done
  #echo "bailing for debug" ; exit 10

  link_dotfiles
  #link_tools
  if $everything; then
    check_deps

    info "install_packages..."
    install_packages

    info "install_nord_theme..."
    install_nord_theme

    info "install_vim_plugins..."
    install_vim_plugins

    info "install_vim_goinstall..."
    install_vim_goinstall

    info "install_vim_plugins..."
    install_vim_plugins

    info "install_zsh_plugins..."
    install_zsh_plugins

    info "install tmux plugins..."
    install_tmux_plugins
  fi

  info "Install complete."
}

main "$@"
